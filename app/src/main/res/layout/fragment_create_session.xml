<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_12dp"
        android:orientation="vertical">


        <com.android.utils.CustomEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/transparent"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890 "
            android:hint="@string/enter_session_name"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:padding="@dimen/_10dp"
            android:textColor="@color/Gray"
            android:textSize="@dimen/_14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1dp"
            android:background="@color/LightGrey" />

        <com.android.utils.CustomEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20dp"
            android:backgroundTint="@color/transparent"
            android:hint="@string/session_password"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:padding="@dimen/_10dp"
            android:textColor="@color/Gray"
            android:textSize="@dimen/_14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1dp"
            android:background="@color/LightGrey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20dp"
            android:weightSum="2">

            <com.android.utils.CustomTvLight
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight=".7"
                android:text="Session Range"
                android:textColor="@color/Gray" />

            <Spinner
                android:id="@+id/distanceSP"
                android:layout_width="0dp"
                style="@style/spinner_style"
                android:layout_marginStart="@dimen/_8dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:gravity="center_vertical" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1dp"
            android:layout_marginTop="@dimen/_10dp"
            android:background="@color/LightGrey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20dp"
            android:orientation="horizontal"
            android:weightSum="4">

            <com.android.utils.CustomTvLight
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Oxygen"
                android:textColor="@color/Gray"
                android:textSize="@dimen/_14sp" />

            <com.android.utils.CustomTvLight
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="19.5"
                android:textColor="@color/Gray"
                android:textSize="@dimen/_14sp" />

            <com.android.utils.CustomTvLight
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="23"
                android:textColor="@color/Gray"
                android:textSize="@dimen/_14sp" />

            <com.android.utils.CustomTvLight
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="%"
                android:textColor="@color/Gray"
                android:textSize="@dimen/_14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1dp"
            android:layout_marginTop="@dimen/_10dp"
            android:background="@color/LightGrey" />

        <Button
            android:id="@+id/startBT"
            style="@style/LoginButtonBlueRoundedStroke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20dp"
            android:text="Start Session"
            android:textSize="@dimen/_14sp" />
    </LinearLayout>


</ScrollView>